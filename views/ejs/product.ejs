<%- include('./partials/header.ejs') %>

<% if (product) { %>
<div class="card" style="width: 18rem">
  <img src="https://cdn3.iconfinder.com/data/icons/education-209/64/clock-stopwatch-timer-time-128.png"
    class="card-img-top" alt="..." />
  <div class="card-body">
    <h5 class="card-title">Nombre: <%= product.name %></h5>
    <p class="card-text">ID: <%= product.id %></p>
    <p class="card-text">Fecha de agregado: <%= product.timestamp %></p>
    <p class="card-text">Descripcón: <%= product.description %></p>
    <p class="card-text">Código: <%= product.code %></p>
    <p class="card-text">Precio: $<%= product.price %></p>
    <p class="card-text">Stock: <%= product.stock %></p>
    <a href="#" class="btn btn-primary">Modificar</a>
    <a href="/" class="btn btn-primary">Volver a inicio</a>
  </div>
</div>
<form   method="put">
  <div class="form-group">
    <label for="name"><b>Name</b></label>
    <input
      type="text"
      name="name"
      id="name"
      class="form-control"
    />
  </div>
    <label for="description"><b>Description</b></label>
    <input
      type="text"
      name="description"
      id="description"
      class="form-control"
    />
  </div>
    <label for="code"><b>Code</b></label>
    <input
      type="text"
      name="code"
      id="code"
      class="form-control"
    />
  </div>
    <label for="img"><b>Image</b></label>
    <input
      type="text"
      name="img"
      id="img"
      class="form-control"
    />
  </div>

  <div class="form-group">
    <label for="price"><b>Price</b></label>
    <input
      type="number"
      name="price"
      id="price"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="stock"><b>Stock</b></label>
    <input
      type="number"
      name="stock"
      id="stock"
      class="form-control"
    />
  </div>
  <button class="btn btn-success mt-3 mb-5">
    Guardar producto
  </button>
</form>
<% } else { %>
  <div class="alert alert-warning fw-bold" role="alert">
    No se encontró el producto con este id
  </div>
  <% } %>